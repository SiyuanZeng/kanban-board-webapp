doctype html
html
	head
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
		title Login
	body
		.container
			.row
				.col-sm-6.col-md-4.col-md-offset-4
					h1.text-center.login-title Sign in
					.account-wall
						img.profile-img(src='http://b.dryicons.com/images/icon_sets/colorful_stickers_part_3_icons_set/png/256x256/user.png', alt='')
						form.form-signin(action='/user', method='POST')
							input.form-control(type='text', name='username', placeholder='Username', required='', autofocus='')
							input.form-control(type='password', name='password', placeholder='Password', required='')
							button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
					a.text-center.new-account(href='/register') Create an account
	script(src='https://code.jquery.com/jquery-2.1.4.min.js')
	script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')


